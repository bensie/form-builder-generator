<div class="fields">
  <p>
    <strong><%= f.label :label, "Enter a label for this field" %></strong><br />
    <%= f.text_field :label %>
  </p>
  <p>
    <strong><%= f.label :tag, "What type of input is this field?" %></strong><br />
    <%= f.select :tag, [["Text box","text_field"], ["Select Menu", "select"], ["Text Area", "text_area"], ["Check Box", "check_box"], ["Date Select", "date_select"]] %>
  </p>
  <p>
    <%= f.check_box :required %>
    <%= f.label :required, "Mark this field as required" %>
  </p>
  <p>
    <strong><%= f.label :values, "Enter the possible values if this is a select menu (one per line)." %></strong><br />
    <%= f.text_area :values, :cols => 50, :rows => 6 %>
  </p>
  <%= remove_child_link "Remove This Field", f %>
  <br /><br />
</div>